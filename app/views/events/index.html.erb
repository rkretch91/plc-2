<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.3) 0%, rgba(0,36,61,0.3) 0%), url('<%= image_path "garnish-potatoes.jpg" %>'); height: 400px;"">
    <div class="banner-content">
      <h1>Find a Potluck Club Event Near You!</h1>
    </div>
  </div>

<div class="container cards">
  <div class="row">
    <h3>Berlin</h3>
    <% @events.each do |event| %>
      <% if event.city == "Berlin" %>
        <div class="col col-xs-12 col-sm-4">
          <%= link_to event_path(event), class: "card-link" do %>
    <!-- Post-->
          <div class="post-module">
            <!-- Thumbnail-->
            <div class="thumbnail">
              <div class="date-card">
                <div class="day"><%= event.date.day %></div>
                <div class="month"><%= event.date.strftime("%b") %></div>
              </div>
              <%= image_tag(event.photos? ? (cl_image_path event.photos.first) : (image_path 'https://s3-us-west-2.amazonaws.com/s.cdpn.io/169963/photo-1429043794791-eb8f26f44081.jpeg')) %>
            </div>
            <div class="post-content">
              <h4 class="title"><%= event.event_name %></h4>
              <p><i class="fas fa-map-marker-alt"></i> <%= event.city %></p>
              <p><i class="fas fa-users"></i> <%= event.users.count == 1 ? event.users.count.to_s + " Potlucker Attending" : event.users.count.to_s + " Potluckers Attending" %></p>
  <!--           <div class="post-meta"><span class="timestamp"><i class="fa fa-facebook"></i> 6 mins ago</span><span class="comments"><i class="fa fa-comments"></i><a href="#"> 39 comments</a></span></div> -->
            </div>
          <% end %>
          <!-- Post Content-->
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="row">
    <h3>Shanghai</h3>
    <% @events.each do |event| %>
      <% if event.city == "Shanghai" %>
        <div class="col col-xs-12 col-md-4">
          <%= link_to event_path(event), class: "card-link" do %>
    <!-- Post-->
          <div class="post-module">
            <!-- Thumbnail-->
            <div class="thumbnail">
              <div class="date-card">
                <div class="day"><%= event.date.day %></div>
                <div class="month"><%= event.date.strftime("%b") %></div>
              </div>
              <%= image_tag(event.photos? ? (cl_image_path event.photos.first) : (image_path 'https://s3-us-west-2.amazonaws.com/s.cdpn.io/169963/photo-1429043794791-eb8f26f44081.jpeg')) %>
            </div>
            <div class="post-content">
              <h4 class="title"><%= event.event_name %></h4>
              <p><i class="fas fa-map-marker-alt"></i> <%= event.city %></p>
              <p><i class="fas fa-users"></i> <%= event.users.count == 1 ? event.users.count.to_s + " Potlucker Attending" : event.users.count.to_s + " Potluckers Attending" %></p>
  <!--           <div class="post-meta"><span class="timestamp"><i class="fa fa-facebook"></i> 6 mins ago</span><span class="comments"><i class="fa fa-comments"></i><a href="#"> 39 comments</a></span></div> -->
            </div>
          <% end %>
          <!-- Post Content-->
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

    <% if policy(Event).new? %>
      <div class="new-event">
        <div class="call-to-action-content">
            <%= link_to "New Potluck Event", new_event_path %>
        </div>
      </div>
    <% end %>

<div class="call-to-action">
  <div class="call-to-action-content">
    <h3><strong>Don't See Your City?</strong></h3>
    <%= link_to "Become A Host!", events_path, class: "btn btn-success btn-lg round-corner" %>
  </div>
</div>



